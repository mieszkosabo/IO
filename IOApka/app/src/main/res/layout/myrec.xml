<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="#FFF0AE"
    android:visibility="visible"
    tools:visibility="visible">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarAdding2"
        android:layout_width="0dp"
        android:layout_height="158dp"
        android:background="#FFF0AE"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:logo="@drawable/logo_transparent"
        tools:visibility="visible" />

    <ScrollView
        android:id="@+id/Ingredients2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="140dp"
        android:background="@drawable/button_background"
        android:fillViewport="true"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarAdding2">

        <TableLayout
            android:id="@+id/tableIngredients2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:isScrollContainer="true"
            android:textColor="#FFF6CE">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_height="50dp"
                    android:layout_column="0"
                    android:layout_weight="0.6"
                    android:background="@drawable/button_background2"
                    android:gravity="center"
                    android:text="Składnik"
                    android:textColor="#FFF6CE"
                    android:textSize="20sp" />

                <TextView
                    android:layout_height="50dp"
                    android:layout_column="1"
                    android:layout_weight="0.4"
                    android:background="@drawable/button_background2"
                    android:gravity="center"
                    android:text="Ilość"
                    android:textColor="#FFF6CE"
                    android:textSize="20sp" />

            </TableRow>

        </TableLayout>

    </ScrollView>

    <TextView
        android:id="@+id/Popup5"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/button_background2"
        android:gravity="center"
        android:text="Coś tam"
        android:textColor="#FFF6CE"
        android:textSize="20sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarAdding2" />

    <TextView
        android:id="@+id/Popup6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="400dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/button_background2"
        android:gravity="center"
        android:text="Opis"
        android:textColor="#FFF6CE"
        android:textSize="20sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarAdding2" />

</androidx.constraintlayout.widget.ConstraintLayout>